{
  "name": "korean-variable-translator",
  "displayName": "vscode-korean-variable-translator",
  "description": "한글로 입력한 변수명을 영문 변수명으로 변환합니다.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vue"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Korean Variable Translator",
        "properties": {
          "koreanVariableTranslator.deeplApiKey" : {
            "type": "string",
            "default": "",
            "description": "Deepl API 키를 입력해주세요."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "korean-variable-translator.translate",
        "title": "Translate Korean to Variable Name",
        "when": "editorHasSelection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editor.hasSelection",
          "command": "korean-variable-translator.translate",
          "group": "z_commands"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "deepl-node": "^1.17.3"
  }
}
